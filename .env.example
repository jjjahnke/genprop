# Wisconsin Real Estate Database - Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://realestate:devpassword@localhost:5432/realestate
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
RABBITMQ_URL=amqp://realestate:devpassword@localhost:5672/
RABBITMQ_EXCHANGE=ingestion.direct
RABBITMQ_PREFETCH_COUNT=100

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# QDRANT CONFIGURATION (Layer 4)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# =============================================================================
# INGESTION API CONFIGURATION
# =============================================================================
# File upload limits
MAX_UPLOAD_SIZE_MB=5000
TEMP_STORAGE_PATH=/tmp/gdb-processing

# Processing
BATCH_SIZE=1000
DEFAULT_LAYER_NAME=V11_Parcels

# API Server
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# =============================================================================
# SECURITY (for production)
# =============================================================================
# These are handled by k8s in production, but can be used for local testing
# API_KEY_ENABLED=false
# API_KEY_HEADER=X-API-Key
# JWT_SECRET=your-secret-key-here
# JWT_ALGORITHM=HS256

# =============================================================================
# MONITORING (deferred to later phase)
# =============================================================================
# PROMETHEUS_PORT=9090
# METRICS_ENABLED=false

# =============================================================================
# DOCKER REGISTRY
# =============================================================================
DOCKER_REGISTRY=registry.lan:30500
DOCKER_NAMESPACE=realestate  # Optional: namespace/project name in registry

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=true
RELOAD=true
